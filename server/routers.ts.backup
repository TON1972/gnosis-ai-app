        if (ctx.user.role === 'admin') {
          conditions.push(eq(chatbotContacts.assignedTo, ctx.user.id));
        }

        let requests;
        if (conditions.length > 0) {
          requests = await db
            .select()
            .from(chatbotContacts)
            .where(and(...conditions))
            .orderBy(desc(chatbotContacts.createdAt));
        } else {
          requests = await db
            .select()
            .from(chatbotContacts)
            .orderBy(desc(chatbotContacts.createdAt));
